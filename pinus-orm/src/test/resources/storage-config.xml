	<cluster name="pinus">
		<global>
			<master>pinus</master>
			<slave>pinus0</slave>
		</global>
		<region capacity="1-30000000">
			<master>
				<sharding>pinus1</sharding>
				<sharding>pinus2</sharding>
			</master>
			<slave>
				<sharding>pinus3</sharding>
