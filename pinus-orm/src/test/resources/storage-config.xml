		removeAbandoned="true" removeAbandonedTimeout="10" maxWait="1000"
		timeBetweenEvictionRunsMillis="10000" numTestsPerEvictionRun="10"
		minEvictableIdleTimeMillis="10000" filters="stat"
		poolPreparedStatements="true">
